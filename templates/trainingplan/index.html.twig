    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Userid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trainingplan in trainingplans %}
            <tr>
                <td>{{ trainingplan.id }}</td>
                <td>{{ trainingplan.name }}</td>
                <td>{{ trainingplan.userid }}</td>
                <td>
